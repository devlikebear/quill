{
  "name": "quill",
  "version": "1.0.0",
  "description": "AI-powered documentation generator for web applications",
  "keywords": [
    "documentation",
    "automation",
    "ai",
    "claude",
    "playwright",
    "manual",
    "cli"
  ],
  "homepage": "https://github.com/devlikebear/quill#readme",
  "bugs": {
    "url": "https://github.com/devlikebear/quill/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/devlikebear/quill.git"
  },
  "license": "MIT",
  "author": "devlikebear",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "quill": "./dist/cli/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.27",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "docx": "^9.5.1",
    "dotenv": "^16.3.1",
    "handlebars": "^4.7.8",
    "js-yaml": "^4.1.0",
    "ora": "^7.0.1"
  },
  "devDependencies": {
    "@types/handlebars": "^4.0.40",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vitest/ui": "^1.0.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "prettier": "^3.1.0",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
